<div class="frame-header">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/<%= PagesHelper::default_page.absolute_path %>">Bud</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% PagesHelper::PAGES.sub_pages[1..-1].each do |page| %>
            <% if page.has_sub_pages? %>
              <li class="<%= "active" if is_page_active?(page) %> dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" href="<%= page.absolute_path %>">
                  <%= page.name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <% page.sub_pages.each do |child_page| %>
                    <li class="<%= "active" if is_page_active?(child_page) %>">
                      <a href="/<%= child_page.absolute_path %>"><%= child_page.name %></a>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% else %>
              <li class="<%= "active" if is_page_active?(page) %>">
                <a href="/<%= page.absolute_path %>"><%= page.name %></a>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="margin-bottom"></div>
</div>