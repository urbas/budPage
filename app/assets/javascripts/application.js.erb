var budPageModule = angular.module('budpage', [
  'ui.router',
  'toaster',
  'frame.header',
  'pages'
]);

budPageModule.config(['$stateProvider', function ($stateProvider) {
  $stateProvider.state('main', {
    abstract: true,
    url: "/",
    views: {
      'header': {templateUrl: '<%= asset_path('main/header-view.html') %>'},
      'body': {templateUrl: '<%= asset_path('main/body-view.html') %>'},
      'footer': {templateUrl: '<%= asset_path('main/footer-view.html') %>'}
    }
  });
}]);

budPageModule.config(['$urlRouterProvider', function ($urlRouterProvider) {
  $urlRouterProvider.otherwise("/");
}]);
