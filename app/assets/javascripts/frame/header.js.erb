var frameHeaderModule = angular
  .module('frame.header', [
    'toaster',
    'ui.bootstrap'
  ]);

frameHeaderModule.directive('header', function () {
  return {
    restrict: 'E',
    scope: {},
    controller: 'HeaderCtrl',
    templateUrl: '<%= asset_path('frame/header.html') %>'
  };
});

frameHeaderModule.controller('HeaderCtrl', ['$scope', '$state', function ($scope, $state) {
  $scope.navItems = [
    {name: "About", link: "main.home"}
  ];

  $scope.isNavItemActive = function (navItem) {
    return $state.includes(navItem.link) || !!navItem.activeUrls && navItem.activeUrls.some(function (url) {
        return $state.includes(url);
      });
  };
}]);
